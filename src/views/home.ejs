<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <link rel="stylesheet" href="css/styles.css" />
    
</head>
<body>
    <div class="bg-container">
        <h1 id="banner">Excellence Group of Institutes</h1>
        <div class="form-box">
            <div class="slider">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" onclick="login()">Log In</button>
                <button type="button" class="toggle-btn" onclick="register()">Register</button>
            </div>
            <div class="social">
                <img src="image/facebook.png" alt="social-icons" >
                <img src="image/google.png" alt="social-icons" >
                <img src="image/twitter.png" alt="social-icons" >
            </div>
            <form id="Login" class="input-group" action="/login" method="POST">
                <input type="email" class="input-field" placeholder="Enter Your Email" name="email" required>
                <input type="password" class="input-field" placeholder="Type in Your Password" name="password" required>
                <button type="submit" class="submit-btn">Log In</button>
            </form>
            <form id="Register" class="input-group" action="/signup"   method="POST">
                <input type="text" class="input-field" placeholder="Fullname" name="name" required>
                <input type="email" class="input-field" placeholder="Enter Your Email" name="email" required>
                <input type="password" id="txtPassword" class="input-field" placeholder="Type in Your Password" name="password" required>
                <input type="password" id="txtConfirmPassword" class="input-field" placeholder="Confirm Your Password"  required>
                <br/>
                <span id="message" style="color: red;"></span>
                <button type="submit" onclick="return CheckPassword()" class="submit-btn">Register</button>
            </form>
        </div>
    </div>
    <div class="circle1"></div>
    <div class="circle2"></div>
    <script>
        var x = document.getElementById("Login");
        var y = document.getElementById("Register");
        var z = document.getElementById("btn");
        let a =document.getElementById('message')
        function login(){
            x.style.left ="50px";
            y.style.left ="490px";
            z.style.left ="0px";
        }
        function register(){
            x.style.left ="-400px";
            y.style.left ="50px";
            z.style.left ="170px";
        }
        function CheckPassword(){
             
        var password = document.getElementById("txtPassword").value;
        var confirmPassword = document.getElementById("txtConfirmPassword").value;
        if (password != confirmPassword) {
            a.innerHTML="Password not matching"
            return false;
        }
        return true;
        }
    </script>
</body>
</html>